---
layout: layouts/base.njk
title: Home
pagination:
  data: collections.post
  reverse: true
  size: 5
---
<ul class="post-list">
{% for post in pagination.items %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a><br>
    <span class="date">{{ post.date | date('dd MMM yyyy') }}</span>
  </li>
{% endfor %}
</ul>

{% if pagination.href.next %}
  <a href="{{ pagination.href.next }}">next Â»</a>
{% endif %}